{
	"compilerOptions": {
		"lib": ["ES2017", "DOM"],
		"target": "ES2017",
		"module": "CommonJS",
		"moduleResolution": "node",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"removeComments": true,
		"declaration": true,
		"declarationDir": "types",
		"outDir": "dist"
	},
	"include": ["./src"],
}